<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/character1"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character2"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character3"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character4"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character5"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character6"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character7"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character8"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/resim" />

        <ImageView
            android:id="@+id/character9"
            android:layout_width="108dp"
            android:layout_height="116dp"
            android:onClick="increaseskor"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/resim" />
    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="262dp"
        android:layout_height="176dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Time : 10"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/skorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Skor : 0"
            android:textSize="26sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>